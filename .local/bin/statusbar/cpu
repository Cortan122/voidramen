#!/bin/sh

case $BLOCK_BUTTON in
  1) notify-send "üñ• CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head)" ;;
  2) notify-send "üå°Ô∏è CPU temperature" "üî• $(sensors | awk '/Core 0/ {print $3}')" ;;
  3) notify-send "üñ• CPU module " "\- Shows CPU <s>temperature</s>.
- Click to show intensive processes.
- Middle click to show CPU temperature.
- % is of single core." ;;
esac

float="$(LC_ALL="en_US" mpstat 1 1 | awk '/^Average:/ {printf("%.2f\n",100 - $NF)}')"
fixed="$(echo "$float" | sed 's/\.//g')"

if [ "$fixed" -ge 8000 ]; then
  color="#ff0000"
elif [ "$fixed" -ge 5000 ]; then
  color="#fffc00"
else
  color="#ffffff"
fi

echo "<span color='$color'>$float%</span>"

# $(sensors | awk '/Core 0/ {print $3}')
