#!/bin/sh

# Status bar module for disk space
# $1 should be drive mountpoint
# $2 is optional icon, otherwise mountpoint will displayed

[ -z "$1" ] && exit

icon="$2"
[ -z "$2" ] && icon="$1"

case $BLOCK_BUTTON in
  1) pgrep -x dunst >/dev/null && notify-send "ðŸ’½ Disk space" "$(
    df -h --output=target,used,size,pcent | awk 'NR==1; $3~/G/ && +$3 > 4 {
      if (+$4 > 80) color="#ff0000"
      else if (+$4 > 50) color="#fffc00"
      else color="#ffffff"

      n=split($0,a," ",b)
      a[4] = ("<span color=\"" color "\">" $4 "</span>")
      line=b[0]
      for (i=1;i<=n; i++) line=(line a[i] b[i])
      print line
    }'
  )" ;;
  3) pgrep -x dunst >/dev/null && notify-send "ðŸ’½ Disk module" "\- Shows used hard drive space.
- Click to show all disk info." ;;
esac

printf "%s: %s\n" "$icon" "$(df -h "$1" | awk ' /[0-9]/ {print $3 "/" $2}')"
